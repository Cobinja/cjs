
lib_LTLIBRARIES += libcjs-dbus.la

cjs_dbusheaderdir=$(gjs_module_includedir)/gjs-dbus
cjs_dbusheader_HEADERS =	\
	gjs-dbus/dbus.h		\
	gjs-dbus/dbus-proxy.h

libcjs_dbus_la_SOURCES =	\
	gjs-dbus/dbus-private.h \
	gjs-dbus/dbus.c		\
	gjs-dbus/dbus-signals.c	\
	gjs-dbus/dbus-proxy.c

libcjs_dbus_la_CPPFLAGS =		\
	$(AM_CPPFLAGS)			\
	-DG_LOG_DOMAIN=\"CjsDBus\"
libcjs_dbus_la_CFLAGS = 		\
	$(AM_CFLAGS)			\
	$(GJS_DBUS_CFLAGS)
libcjs_dbus_la_LDFLAGS =		\
	-no-undefined
libcjs_dbus_la_LIBADD = 		\
	libcjs.la			\
	$(GJS_DBUS_LIBS)

pkgconfig_DATA += gjs-dbus-1.0.pc

EXTRA_DIST += 			\
	cjs-dbus-1.0.pc.in
